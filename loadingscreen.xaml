<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="pawdoc.LoadingScreen"
      Title="Loading" av:DesignWidth="800" av:DesignHeight="450">

    <Grid Background="#FBF8EF">
        <TextBlock
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           FontSize="96"
           FontFamily="pack://application:,,,/Font/#LondrinaSolid"
           TextAlignment="Center" Text="PawDoc" FontWeight="Bold" Foreground="#FFFFEC9E" Margin="0,110,0,0" />

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,251,0,0">
            <!-- Text: Loading -->
            <TextBlock Text="Loading..."
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#FFB45F50"
                       HorizontalAlignment="Center" />

            <!-- Progress Bar -->
            <ProgressBar IsIndeterminate="True"
                         Height="20"
                         Width="300"
                         Margin="0,20,0,0"
                         Foreground="#FFB45F50" />
        </StackPanel>

    </Grid>
</Page>
